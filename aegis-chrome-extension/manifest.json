{
  "name": "Aegis Project",
  "version": "1.0",
  "description": "Monitors browsing activity to protect children from harmful content.",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "history",
    "storage",
    "offscreen",
    "webNavigation",
    "activeTab",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://aegis-ingestion-api-943089436637.us-central1.run.app/", 
    "https://generativelanguage.googleapis.com/",
    "https://*.googleapis.com/"
  ],
  "oauth2": {
    "client_id": "943089436637-l2ivb1qs0pe82j8af5j7716412bkclh6.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/cloud-platform"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';",
    "sandbox": "sandbox allow-scripts; script-src 'self' 'unsafe-eval'; connect-src https://tfhub.dev https://storage.googleapis.com https://www.kaggle.com https://*.googleapis.com/ https://aegis-ingestion-api-943089436637.us-central1.run.app;"
  },
  "sandbox": {
    "pages": [
      "sandbox.html"
    ]
  },
  "minimum_chrome_version": "109",
  "action": {},
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["https://your-dashboard-domain.com/*"]
    }
  ],
  "icons": {
    "16": "image.png"
  }
}